<style>
    :root {
        --black: #343432;
        --black2: #2C2E43;
        --blaack: #000000;
        --darkGray: #595260;
        --lightGray: #B2B1B9;
        --yellow: #FFD523;
    }

    @keyframes rainbow { 
        0%{background-position:0%}
        25%{background-position:50%;text-shadow: 0px 0px 20px var(--yellow);}
        50%{background-position:100%}
        75%{background-position:150%}
        100%{background-position:200%}

    }

    .title-container {
        width:100vw;
        display:block;
        background:var(--black);
    }
    .header-title {
        background: radial-gradient(ellipse at center, var(--yellow) 0, var(--darkGray) 45%, var(--yellow) 95%);
        background-size: 200% 200%;
        background-position: 150%;
        -webkit-background-clip:text;
        -webkit-text-stroke-width: .001px;
        -webkit-text-stroke-color: rgba(0,0,0,.2);
        color:transparent;
        font-size:3rem;
        text-align:center;
        transition: color .2s ease-in-out;
        font-weight:900;
        letter-spacing: 3px;
        width:100%;
        margin:0;
    }

    .header-title:hover{
        animation: rainbow 10s linear infinite;
    }

    .navbar {
        width:100vw;
        display:flex;
        flex-direction:row;
        background:var(--darkGray);
    }

    .button {
        color: var(--yellow);
        cursor: pointer;
        font-size:16px;
        line-height: 10vh;
        text-align:center;
        max-width: 25vw; 
        position: relative;
        text-decoration: none;
        text-transform: uppercase;
        width: 25vw; 
        background: transparent;
        font-weight: 100;
        transition: all 1s linear;
        border-style: solid;
        border-width: 2px;
        border-color: var(--black);
    }

    svg {
        height: 100%;
        left: 0;
        position: absolute;
        top: 0; 
        width: 100%; 
        }
        
    rect {
        fill: none;
        stroke-width: 5;
        stroke-dasharray: 15, 310;
        stroke-dashoffset: 48;
        transition: all 0.35s linear;
    }

    .button:hover {
        border:none;
        font-weight: 900;
        letter-spacing: 1px;
        box-shadow: 0px 0px 10px var(--yellow);
    }

    .button:hover rect {
        stroke: var(--yellow);
        stroke-width: 2;
        stroke-dasharray: 422, 0;
        transition: all 1.35s cubic-bezier(0.19, 1, 0.22, 1);
        }
    
    .logo {
        /* min-width:15vw;
        max-height:20vh; */
    }

    .rows {
        flex-direction:row;
        display:flex;
        padding-left:3vw;
        padding-right:3vw;
        padding-top:3vh;
        padding-bottom:3vh;
        justify-content:center;
        align-items:center;
        background:var(--black);
    }


    
</style>