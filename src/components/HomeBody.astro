---
import Card from './Card.astro';

const title1 = "Vision";
const vission = "To live in the world we want to live in rather than the world as it currently stands. One thing we hate is the term 'industry standard.' We want to provide services that are truly the best in quality, the best in price, and the best in customer service. ";

const title2 = "Services";
const services = "We offer custom software development for anything you can envision. Websites, web apps, mobile apps, virtual reality apps, artifical intellegence solutions, cloud infrastructure, and more... If you can imagine it, we will build it!";

const title3 = "Why Us?";
const why = "We have one major philosophy at our consultancy that you have probably never heard of: 'Treat others the way you want to be treated.' If you help us make our vision into reality we will do the same for you. You will be part of our development process from beggining to end.";

const title4 = "Contact";
const contact = "Feel free to reach out to us via email, phone, or schedule a meeting with me directly on my calender! We will offer you a free quote detailing how much development on your project will cost. We are also flexible with different payment options."
---

<div class="mainBody">
    <p class="motto">Imagine Software Consultancy</p> 
    <p class="headerTitle">~ Bringing your imagination to life ~</p>
    <div class="cardContainer">
        <Card title={title1} body={vission}/>
        <Card title={title2} body={services}/>
        <Card title={title3} body={why}/>
        <Card title={title4} body={contact}/>
    </div>
</div>

<style>
    :root {
        --black: #2C2E43;
        --blaack: #000000;
        --darkGray: #595260;
        --lightGray: #B2B1B9;
        --yellow: #FFD523;
    }

	.mainBody {
		background: var(--black);
		width:100vw;
		height:90vh;
        margin:0;

	}
    .motto {
        background:linear-gradient(90deg, var(--yellow), var(--lightGray));
        margin:0;
        font-size:3rem;
        text-align:center;
        -webkit-background-clip:text;
        color:transparent;
        font-weight:600;
        color:var(--yellow);
    }

    .cardContainer {
        align-items:center;
        flex-direction:row;
        display:flex;
    }

    @keyframes rainbow { 
        0%{background-position:0%}
        25%{background-position:50%;text-shadow: 0px 0px 20px var(--yellow);}
        50%{background-position:100%}
        75%{background-position:150%}
        100%{background-position:200%}

    }

    .headerTitle {
        padding:5vh;
        background: radial-gradient(ellipse at center, var(--yellow) 0, var(--darkGray) 45%, var(--yellow) 95%);
        background-size: 200% 200%;
        background-position: 150%;
        -webkit-background-clip:text;
        -webkit-text-stroke-width: .001px;
        -webkit-text-stroke-color: rgba(0,0,0,.2);
        color:transparent;
        font-size:2.5rem;
        text-align:center;
        transition: color .2s ease-in-out;
        font-weight:900;
        letter-spacing: 3px;
        /* width:100%; */
        margin:0;
    }

    .headerTitle:hover{
        animation: rainbow 10s linear infinite;
    }
</style>